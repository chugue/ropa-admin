{{> /layout/header}}
{{> /layout/navbar}}
{{> /layout/sidebar-brand}}


<!-- 메인 화면 -->
<div class="content">
    <h2>상품 목록</h2>
    <div class="card">
        <div class="card-body">
            <a href="/api/items-register-form" class="btn btn-primary mb-3">상품등록</a>
            <!-- 검색 폼 -->
            <form action="/api/items-manage" method="get" class="form-inline search-form float-right mb-3">
                <div class="form-group mr-2">
                    <select class="form-control" name="searchBy"> <!-- 검색 기준을 서버에 전달할 파라미터 이름을 지정합니다 -->
                        <option value="itemId">상품코드</option>
                        <option value="itemName">상품명</option>
                        <option value="category">상위 카테고리</option>
                    </select>
                </div>
                <div class="form-group mr-2">
                    <input type="text" class="form-control" placeholder="검색명" name="keyword">
                </div>
                <button class="btn btn-primary">검색</button>
            </form>
            <table class="table">
                <thead>
                <tr>
                    <th>상품번호</th>
                    <th>상품명</th>
                    <th>상품가격</th>
                    <th>카테고리</th>
                    <th>재고수량</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#itemsList}}
                    <tr>
                        <td>{{itemId}}</td>
                        <td>{{itemName}}</td>
                        <td>{{price}}</td>
                        <td>{{mainCategory}}</td>
                        <td>{{stock}}</td>
                        <td>
                            <form method="get" action="/api/items-detail/{{itemId}}">
                                <button class="btn btn-outline-primary btn-sm">상세보기</button>
                            </form>
                        </td>
                    </tr>
                {{/itemsList}}
                </tbody>
            </table>

            <!-- 페이징 -->
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">이전</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">다음</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>


{{> /layout/footer}}